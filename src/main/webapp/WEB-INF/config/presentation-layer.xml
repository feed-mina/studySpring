<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--  Controller들을 등록한다 -->
<bean id="login" class="com.min.controller.user.LoginController"/>
<bean id="logout" class="com.min.controller.user.LogoutController"/>
<bean id="getBoardList" class="com.min.controller.board.GetBoardListController"/>
<bean id="getBoard" class="com.min.controller.board.GetBoardController"/>
<bean id="insertBoard" class="com.min.controller.board.InsertBoardController"/>
<bean id="updateBoard" class="com.min.controller.board.UpdateBoardController"/>
<bean id="deleteBoard" class="com.min.controller.board.DeleteBoardController"/>


<!-- HandlerMapping을 등록한다. -->
<bean id="handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
	<property name="mappings">
		<props>
			<prop key="/getBoardList.do">getBoardList</prop>
			<prop key="/login.do">login</prop>
			<prop key="/logout.do">logout</prop>
			<prop key="/insertBoard.do">insertBoard</prop>
			<prop key="/updateBoard.do">updateBoard</prop>
			<prop key="/deleteBoard.do">deleteBoard</prop>
			<prop key="/getBoardList.do">getBoardList</prop>
			<prop key="/getBoard.do">getBoard</prop>
		</props>
	</property>
</bean>

<!-- ViewResolver을 등록한다. -->
<bean id="resourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	<property name="prefix" value="/WEB-INF/board/"/>
	<property name="suffix" value=".jsp"/>
</bean>

</beans>
